{
	"easycom": {
		"^u-(.*)": "@/uni_modules/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
		    "path" : "pages/news-titles/news-titles",
		    "style" :                                                                                    
		    {
				"navigationBarBackgroundColor": "#d81e06",
				"enablePullDownRefresh":false,
				"app-plus": {
					"titleNView": {
						"buttons": [ 
							{
								"text": "发布      ", 
								"fontSize":"16",
								"float": "right",
								"color":"#fff"
							},
							{
								"text": "HFUT       ", 
								"fontSize":"13",
								"float": "left",
								"color":"#fff"
							}
						],
						"searchInput":{
							"align":"left",
						    "borderRadius": "15px",
						    "placeholder": "搜你想看的",
						    "placeholderColor" : "#fff"
						}
					}
				}
		    }
		    
		},
		{
			"path": "pages/center/center",
			"style": 
			{
				"navigationBarBackgroundColor":"white",
				"navigationBarTitleText":"个人中心",
				"navigationStyle": "default" ,
				"navigationBarTextStyle": "black" // 状态栏字体为白色，只能为 white-白色，black-黑色 二选一
			}
		}
        ,{
            "path" : "pages/news-detail/news-detail",
            "style" :                                                                                    
            {
                "navigationStyle": "custom" ,// 隐藏系统导航栏
                "navigationBarTextStyle": "white" // 状态栏字体为白色，只能为 white-白色，black-黑色 二选一
            }
            
        }
        ,{
            "path" : "pages/news-club/news-club",
            "style" :                                                                                    
            {
                "navigationStyle": "custom" ,// 隐藏系统导航栏
                "navigationBarTextStyle": "black" // 状态栏字体为白色，只能为 white-白色，black-黑色 二选一
            }
            
        }
        ,{
            "path" : "pages/anti-epidemic/anti-epidemic",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/common/login/login",
            "style" :                                                                                    
            {
				"navigationBarBackgroundColor":"white",
				"navigationBarTitleText":"用户登录",
				"navigationStyle": "default" ,
				"navigationBarTextStyle": "black" // 状态栏字体为白色，只能为 white-白色，black-黑色 二选一
            }
            
        }
        ,{
            "path" : "pages/common/login/register",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "用户注册",
                "enablePullDownRefresh": false,
				"navigationStyle": "default" ,
				"navigationBarTextStyle": "black" // 状态栏字体为白色，只能为 white-白色，black-黑色 二选一
				
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "雨哥头条",
		"navigationBarBackgroundColor": "#ffffff",
		"backgroundColor": "#F8F8F8",
		//在App中，取消安卓下拉刷新灰色半弧形效果
		"app-plus" : {
			"bounce" : "none"
		}
	},
	"tabBar": {
	    "color": "#2c2c2c",
	    "selectedColor": "#d81e06",
