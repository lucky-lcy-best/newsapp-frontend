	    },{
	        "pagePath": "pages/anti-epidemic/anti-epidemic",
	        "iconPath": "static/icon/wode.png",
	        "selectedIconPath": "static/icon/wode_sel.png",
	        "text": "抗疫"
	    },{
	        "pagePath": "pages/center/center",
	        "iconPath": "static/icon/wode.png",
	        "selectedIconPath": "static/icon/wode_sel.png",
